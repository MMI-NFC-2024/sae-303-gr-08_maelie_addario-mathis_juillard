    <p style="font-size: 0.875rem; color: var(--muted);">
      Changez l'annÃ©e avec le sÃ©lecteur ci-dessus pour observer les Ã©volutions. 
      Les dÃ©partements qui deviennent plus foncÃ©s voient leur APL MG baisser (dÃ©gradation de l'accÃ¨s), 
      ceux qui s'Ã©claircissent voient leur APL augmenter (amÃ©lioration).
    </p>
  </div>
</PlotFigure>

<script type="module" define:vars={{ geoData2022, geoData2023 }}>
  import * as Plot from "https://cdn.jsdelivr.net/npm/@observablehq/plot@0.6/+esm";

  const container = document.getElementById('carte-comparaison');
  const select = document.getElementById('annee-select');
  let currentChart = null;

  function renderChart(annee) {
    const geoData = annee === '2022' ? geoData2022 : geoData2023;

    if (currentChart) {
      currentChart.remove();
    }

    currentChart = Plot.plot({
      width: 1100,
      height: 900,
      projection: {
        type: "mercator",
        domain: geoData
      },
      color: {
        type: "quantile",
        n: 7,
        scheme: "blues",
        legend: true,
        label: "APL MG (mÃ©diane)"
      },
      marks: [
        Plot.geo(geoData.features, {
          fill: d => d.properties.apl_median,
          stroke: "#999",
          strokeWidth: 0.5,
          title: d => `${d.properties.nom}\nAPL ${annee}: ${d.properties.apl_median ? d.properties.apl_median.toFixed(2) : 'n.d.'}`
        }),
        Plot.text(geoData.features, {
          x: d => Plot.geoCentroid(d)[0],
          y: d => Plot.geoCentroid(d)[1],
          text: d => d.properties.code_dept,
          fontSize: 10,
          fill: "#000",
          fontWeight: "bold"
        })
      ]
    });

    container.innerHTML = '';
    container.appendChild(currentChart);
  }

  // Ã‰couter le changement d'annÃ©e
  select.addEventListener('change', (e) => {
    renderChart(e.target.value);
  });

  // Affichage initial (2023)
  renderChart('2023');
</script>
